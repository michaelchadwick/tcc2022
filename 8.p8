function draw_gradient()
  map(0,0,0,0,26,126)
end

function draw_circle()
  --cls()
  a=time()

  --x/ymod:rot diam
  xmod=10*abs(sin(a/4)+cos(a/4))/1.75+15
  ymod=10*abs(sin(a/4)+cos(a/4))/1.75+15
  --amod:rot curve
  amod1=2
  amod2=3
  --center white dot
  pset(64,64,7)

  --x*sin,y*cos==clockwise
  --y*sin,x*cos==counter
  for i=1,5 do
    a=i/5+time()/5
    circfill(
      80+xmod*sin(a), --x
      60+ymod*cos(a), --y
      (abs(sin(a)+cos(a))*5)/2, --size
      15  --color
    )
  end

  for i=0,16348 do
    x=i%128
    y=i/128
    --pset(x,y,pget(x+1,y))
  end
end

